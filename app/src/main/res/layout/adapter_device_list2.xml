<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

    <TextView
        android:id="@+id/adapter_textView_deviceID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:textSize="25dp"
        tools:text="设备id"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/adapter_textView_deviceID"
        android:layout_alignBottom="@+id/adapter_textView_deviceID"
        android:layout_marginLeft="135dp"

        android:layout_marginStart="135dp"
        android:layout_toEndOf="@+id/adapter_textView_deviceID"
        android:layout_toRightOf="@+id/adapter_textView_deviceID"
        android:paddingTop="5dp"
        android:text="85"
        android:textSize="20sp"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</RelativeLayout>